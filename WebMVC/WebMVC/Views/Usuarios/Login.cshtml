@using DTOs
@model DTOs.DTOUsuarioLogin

@{
    ViewData["Title"] = "Login";
}

<h1>Inicio de Sesion</h1>

<h4 class="mt-3 text-center">Ingrese sus datos: </h4>
<p class = "mt-2 text-center">@ViewBag.Mensaje</p>
<hr />
<div class="row mt-3 justify-content-center align-items-center">
    <div class="col-md-6">
        <form asp-action="IniciarSesion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Rol" class="control-label"></label>
                <span asp-validation-for="Rol" class="text-danger"></span>
                <select name="ArticuloDeMovimientoId" class="form-select">
                    @if (Model.Roles != null)
                    {
                        @foreach (DTORoles usuario in Model.Roles)
                        {
                            <option value="@usuario.Rol">@usuario.Rol</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group mt-2 text-center">
                <input type="submit" value="Iniciar Sesion" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a href="@Url.Action("Index", "Home")" >Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

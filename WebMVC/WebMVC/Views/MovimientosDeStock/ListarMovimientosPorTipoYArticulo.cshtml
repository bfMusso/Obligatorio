@model List<DTOs.DTOMovimientoDeStock>

@{
    ViewBag.Title = "Listar Movimientos por Tipo y Articulo";
}

<h1 class="text-center">Listar Movimientos por Tipo y Articulo</h1>

<h4 class="mt-3 text-center">Movimientos por Tipo y Articulo: </h4>


<div class="row mt-3 justify-content-center align-items-center">
    <div class="col-md-6">
        <form asp-action="ListarMovimientosPorTipoYArticulo">
            <div class="form-group fw-bold text-center">
                <label for="articulo" class="control-label">Articulo Id: </label>
                <input type="number" name="articulo" class="form-control" />
            </div>
            <div class="form-group fw-bold text-center">
                <label for="tipo" class="control-label">Tipo de movimiento Id: </label>
                <input type="number" name="tipo" class="form-control" />
            </div>
            <div class="form-group mt-3 text-center">
                <input type="submit" value="Buscar" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>


@if (ViewBag.Mensaje != null)
{
    <div class="mt-2">
        <p class="fw-bold text-danger text-center">@ViewBag.Mensaje</p>
    </div>
}

@if (Model != null && Model.Count > 0)
{
    <div class="row justify-content-center align-items-center mt-5">
        <table>
            <thead class="text-center bg-black text-white">
                <tr>
                    <th>Id</th>
                    <th>Fecha y Hora</th>
                    <th>Cantidad Artículo</th>
                    <th>Id Artículo de Movimiento</th>
                    <th>Usuario de Movimiento</th>
                    <th>Id Tipo de Movimiento</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var movimiento in Model)
                {
                    <tr>
                        <td>@movimiento.Id</td>
                        <td>@movimiento.FechaYHora</td>
                        <td>@movimiento.CantidadArticulo</td>
                        <td>@movimiento.ArticuloDeMovimientoId</td>
                        <td>@movimiento.UsuarioDeMovimiento</td>
                        <td>@movimiento.TipoDeMovimientoId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}



@model DTOs.DTOMovimientoDeStock
@using DTOs

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Nuevo movimiento de stock</h1>

<h4 class="mt-3 text-center">Complete el formulario para el nuevo movimiento de stock:</h4>


@if (ViewBag.Mensaje != null)
{
    <div class="mt-2">
        <p class="fw-bold text-danger text-center">@ViewBag.Mensaje</p>
    </div>
}

<div class="row mt-3 justify-content-center align-items-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2 fw-bold text-center">
                <label asp-for="FechaYHora" class="control-label"></label>
                <input asp-for="FechaYHora" class="form-control" />
                <span asp-validation-for="FechaYHora" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 fw-bold text-center">
                <label asp-for="CantidadArticulo" class="control-label"></label>
                <input asp-for="CantidadArticulo" class="form-control" />
                <span asp-validation-for="CantidadArticulo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 fw-bold text-center">
                <label asp-for="ArticuloDeMovimientoId" class="control-label"></label>
                <select name="ArticuloDeMovimientoId" class="form-select">
                    @foreach (DTOArticulos articulo in Model.Articulos)
                    {
                        <option value="@articulo.Id">@articulo.Nombre</option>
                    }
                    <span asp-validation-for="ArticuloDeMovimientoId" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group mt-2 fw-bold text-center">
                <label asp-for="TipoDeMovimientoId" class="control-label"></label>
                <select name="TipoDeMovimientoId" class="form-select">
                    @foreach (DTOTipoDeMovimiento tipoMov in Model.TiposDeMovimiento)
                    {
                        <option value="@tipoMov.Id">@tipoMov.Nombre</option>
                    }
                    <span asp-validation-for="TipoDeMovimientoId" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group mt-3 text-center">
                <input type="submit" value="Crear" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a href="@Url.Action("Index", "Home")">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

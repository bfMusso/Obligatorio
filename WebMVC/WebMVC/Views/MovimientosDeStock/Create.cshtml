@model DTOs.DTOMovimientoDeStock
@using DTOs

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movimientos De Stock</h4>
<span>@ViewBag.Mensaje</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            -->
            <div class="form-group">
                <label asp-for="FechaYHora" class="control-label"></label>
                <input asp-for="FechaYHora" class="form-control" />
                <span asp-validation-for="FechaYHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadArticulo" class="control-label"></label>
                <input asp-for="CantidadArticulo" class="form-control" />
                <span asp-validation-for="CantidadArticulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticuloDeMovimientoId" class="control-label"></label>
                <select name="ArticuloDeMovimientoId">
                    @foreach (DTOArticulos articulo in Model.Articulos)
                    {
                        <option value="@articulo.Id">@articulo.Nombre</option>
                    }
                    <span asp-validation-for="ArticuloDeMovimientoId" class="text-danger"></span>
                </select>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="UsuarioDeMovimientoId" class="control-label"></label>
                <input asp-for="UsuarioDeMovimientoId" class="form-control" />
                <span asp-validation-for="UsuarioDeMovimientoId" class="text-danger"></span>
            </div>
            -->
            <div class="form-group">
                <label asp-for="TipoDeMovimientoId" class="control-label"></label>
                <select name="TipoDeMovimientoId">
                    @foreach (DTOTipoDeMovimiento tipoMov in Model.TiposDeMovimiento)
                    {
                        <option value="@tipoMov.Id">@tipoMov.Nombre</option>
                    }
                    <span asp-validation-for="TipoDeMovimientoId" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

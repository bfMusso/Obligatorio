@model MVC_Insumos.Models.PedidoNuevaLineaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edicion</h1>

@if (ViewBag.Mensaje != null)
{
    <p class="alert alert-danger">@ViewBag.Mensaje</p>
}

<h4>Agregar articulos al Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4 mt-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Id del VM en hidden para que no sea visible -->
            <input type="hidden" asp-for="Id" />
            <!-- Cantidad  de articulos que sera seteada en el VM -->
            <div class="form-group mt-3">
                <label asp-for="ArticuloCantidad" class="control-label"></label>
                <input asp-for="ArticuloCantidad" class="form-control" />
                <span asp-validation-for="ArticuloCantidad" class="text-danger"></span>
            </div>
            <!-- Articulo Id, que sera seteado en el VM -->
            <div class="form-group mt-3">
                <label for="ArticuloId" class="control-label">Articulos :</label>
                <select name="ArticuloId" class="form-select">
                    <option value="">-- Articulos --</option>
                    
                        @foreach (var articulo in Model.Articulos)
                        {
                            <option value="@articulo.Id">@articulo.Nombre</option>
                        }
                   
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
